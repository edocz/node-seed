{
  "name": "node-seed",
  "version": "0.0.1",
  "description": "A boilerplate for a Koa2 Redux React application with Webpack3, Jest and SASS",
  "main": "index.js",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "scripts": {
    "test": "`npm bin`/jest",
    "test:watch": "npm run test -- --watch",
    "webserver": "nodemon api/src/server.js",
    "build": "`npm bin`/webpack",
    "dev": "`npm bin`/webpack-dev-server",
    "lint": "`npm bin`/eslint . --ext .js --ext .jsx",
    "deploy": "NODE_ENV=production `npm bin`/webpack -p",
    "start": "npm run dev",
    "clean": "rm -rf app/dist app/build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edocz/node-seed.git"
  },
  "keywords": [
    "boilerplate",
    "koa",
    "redux",
    "react",
    "webpack",
    "mocha",
    "sass"
  ],
  "author": "edocz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edocz/node-seed/issues"
  },
  "homepage": "https://github.com/edocz/node-seed#readme",
  "dependencies": {
    "babel-core": "^6.3.15",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "history": "^1.14.0",
    "html-webpack-plugin": "^2.7.1",
    "immutable": "^3.7.5",
    "isomorphic-fetch": "^2.2.0",
    "koa": "^2.3.0",
    "koa-cors": "0.0.16",
    "koa-route": "^3.2.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.1",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.0",
		"css-loader": "^0.28.4",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
		"node-sass": "^4.5.3",
    "webpack": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta4",
    "babel-jest": "^20.0.3",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-loader": "^1.1.1",
    "eslint-plugin-react": "^3.11.3",
    "jest": "^20.0.4",
    "jsdom": "^7.2.0",
    "react-hot-loader": "^1.3.1",
    "redux-devtools": "^3.0.1",
    "regenerator-runtime": "^0.10.5",
    "webpack-dev-server": "^2.5.1"
  }
}
